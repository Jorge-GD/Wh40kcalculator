@use './app/themes.scss' as themes;
@use '@angular/material' as mat;

// Include the core styles for Angular Material. We need this here so that you only
// have to load a single css file for Angular Material in your app.
// Be sure that you only ever include this mixin once!
@include mat.core();

// Define the palettes for your theme using the Material Design palettes available in palette.scss
// (imported above). For each palette, you can optionally specify a default, lighter, and darker
// hue. Available color palettes: https://material.io/design/color/
$mathhammer-ng-primary: mat.m2-define-palette(mat.$m2-deep-purple-palette);
$mathhammer-ng-accent: mat.m2-define-palette(mat.$m2-amber-palette, A200, A100, A400);

// The warn palette is optional (defaults to red).
$mathhammer-ng-warn: mat.m2-define-palette(mat.$m2-red-palette);

// Create the theme object. A theme consists of configurations for individual
// theming systems such as "color" or "typography".
$mathhammer-ng-theme: mat.m2-define-dark-theme((
  color: (
    primary: $mathhammer-ng-primary,
    accent: $mathhammer-ng-accent,
    warn: $mathhammer-ng-warn,
  ),
  // Define typography for the dark theme
  typography: mat.m2-define-typography-config(
    $font-family: '"Roboto", "Helvetica Neue", sans-serif' // Example W40k font
  )
));

// Define a light theme
$mathhammer-ng-light-primary: mat.m2-define-palette(mat.$m2-blue-grey-palette, 700, 300, 900);
$mathhammer-ng-light-accent: mat.m2-define-palette(mat.$m2-orange-palette, A400, A100, A700);

$mathhammer-ng-light-theme: mat.m2-define-light-theme((
  color: (
    primary: $mathhammer-ng-light-primary,
    accent: $mathhammer-ng-light-accent,
    warn: $mathhammer-ng-warn,
  ),
  // Define typography for the light theme
  typography: mat.m2-define-typography-config(
    $font-family: '"Roboto", "Helvetica Neue", sans-serif' // Example W40k font
  )
));

// Apply the dark theme by default
@include mat.all-component-themes($mathhammer-ng-theme);

// Apply the light theme when the 'light-theme' class is present on the body
.light-theme {
  @include mat.all-component-themes($mathhammer-ng-light-theme);
  // Override Angular Material components for the light theme using CSS variables if needed
  // Example for MatCard background, though all-component-themes should handle most of it.
  .mat-mdc-card {
    background-color: var(--color-background-panel);
    color: var(--color-primary-text);
    border: 1px solid var(--color-border-panel);
  }
}

// Apply theme variables to Angular Material components for other themes
.theme-imperium-dark {
  // You might need to override specific component styles if the Material theme mixins
  // don't pick up all CSS variables as expected, or if you want finer control.
  .mat-mdc-card {
    background-color: var(--color-background-panel);
    color: var(--color-primary-text);
    border: 1px solid var(--color-border-panel);
