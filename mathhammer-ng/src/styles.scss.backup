/* You can add global styles to this file, and also import other style files */

html, body { height: 100%; }
body {
  margin: 0;
  font-family: var(--font-sans-condensed, \"Roboto\", \"Helvetica Neue\", sans-serif); // Fallback font
  background-color: var(--color-background-main); // Use CSS variable
  color: var(--color-primary-text); // Use CSS variable
  transition: background-color 0.3s ease, color 0.3s ease; // Smooth theme transition
}

// Styles for the light theme (ensure body selector is specific enough if .light-theme is on body)
.light-theme body, .light-theme { // Ensure .light-theme on body also applies these
  background-color: var(--color-background-main) !important;
  color: var(--color-primary-text) !important;
}


/* Page Header Styles */
.page-header {
    background-color: var(--color-background-header-main);
    color: var(--color-text-header-main);
    padding: var(--padding-medium) var(--padding-large);
    margin-bottom: var(--margin-large);
    border-bottom: 3px solid var(--color-metal-divider-heavy);
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
}

.page-title {
    font-family: var(--font-gothic); /* Corrected: added closing parenthesis */
    color: var(--color-text-header-main); /* Corrected: added closing parenthesis */
    font-size: 2.8rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin: 0;
    text-shadow: 2px 2px 0px var(--color-metal-shadow), 0 0 10px var(--color-accent-red-glow-soft);
}

/* Example of how to style a specific Material component for the theme
// This is just an example, you\'ll customize components as needed
.mat-mdc-card {
  background-color: var(--color-background-panel); // Use CSS variable
  color: var(--color-primary-text); // Use CSS variable
  border: 1px solid var(--color-border-panel); // Use CSS variable
}

.light-theme .mat-mdc-card {
  background-color: var(--color-background-panel); // CSS variable from .light-theme scope
  color: var(--color-primary-text);
  border: 1px solid var(--color-border-panel);
}

// General Styles for Cogitator Panel and Sections
.cogitator-panel {
    background-color: var(--color-metal-panel);
    border: 3px solid var(--color-metal-panel-border);
    box-shadow: 0 0 25px rgba(0,0,0,0.6), inset 0 0 15px rgba(0,0,0,0.4);
    padding: var(--padding-large);
    margin-bottom: var(--margin-large);
    color: var(--color-text-screen);
}

.cogitator-section {
    background-color: var(--color-background-screen);
    border: 2px solid var(--color-metal-interactive);
    padding: var(--padding-medium);
    margin-bottom: var(--padding-medium);
    box-shadow: inset 0 0 10px rgba(0,0,0,0.5);
}

.cogitator-title {
    font-family: var(--font-display);
    color: var(--color-text-title);
    font-size: 1.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 2px solid var(--color-accent-red-glow);
    padding-bottom: var(--padding-small);
    margin-bottom: var(--padding-medium);
    text-shadow: 0 0 5px var(--color-accent-red-glow);
}

/* Input Field Styles */
.input-field-font, .input-field-text-font {
    background-color: var(--color-input-bg);
    border: 1px solid var(--color-metal-interactive);
    color: var(--color-text-screen);
    font-family: var(--font-sans-condensed); /* Corrected: Added closing parenthesis */
    font-size: 1.05rem;
    padding: 0.6rem 0.8rem;
    // transition for focus/hover effects
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.input-field-font:focus, .input-field-text-font:focus,
.input-field-font:hover, .input-field-text-font:hover {
    border-color: var(--color-metal-interactive-hover);
    box-shadow: 0 0 8px var(--color-metal-interactive-glow);
}


/* Standard button styling - for primary, accent, and warn palettes
.mat-mdc-button.mat-primary,
.mat-mdc-button.mat-accent,
.mat-mdc-button.mat-warn {
    background-color: var(--color-primary-button-bg);
    color: var(--color-primary-button-text);
    border: 1px solid var(--color-primary-button-border);
    border-radius: var(--button-border-radius);
    padding: var(--button-padding);
    margin: var(--button-margin);
    font-family: var(--font-display);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background-color 0.3s ease, border-color 0.3s ease;

    &:hover {
        background-color: var(--color-primary-button-hover-bg);
        border-color: var(--color-primary-button-hover-border);
    }

    &:active {
        background-color: var(--color-primary-button-active-bg);
        border-color: var(--color-primary-button-active-border);
    }

    &:disabled {
        background-color: var(--color-button-disabled-bg);
        color: var(--color-button-disabled-text);
        border-color: var(--color-button-disabled-border);
        cursor: not-allowed;
    }
}

// Icon button styling
.mat-mdc-icon-button {
    color: var(--color-icon-button); // Default icon color

    &.mat-primary, &.mat-accent, &.mat-warn {
        color: var(--color-icon-button-themed); // Themed icon color (e.g., primary, accent)
    }

    &:hover {
        background-color: var(--color-icon-button-hover-bg); // Subtle background on hover
    }

    &:active {
        background-color: var(--color-icon-button-active-bg);
    }

    &:disabled {
        color: var(--color-icon-button-disabled);
        background-color: transparent; // Ensure no background for disabled icon buttons
    }
}

/* Material Component Overrides - Using CSS Variables */

// MatFormField theming
.mat-mdc-form-field {
    // Apply background to the container of the input
    .mat-mdc-text-field-wrapper, .mdc-text-field {
        background-color: var(--color-input-bg) !important; // Important to override Material's default
        border-radius: var(--input-border-radius); // Consistent border radius
    }

    // Input text color
    .mat-mdc-form-field-input-control, .mdc-text-field__input {
        color: var(--color-text-screen);
        font-family: var(--font-sans-condensed);
        caret-color: var(--color-accent-green-glow); // Themed caret color
    }

    // Floating label color
    .mdc-floating-label, .mat-mdc-floating-label {
        color: var(--color-secondary-text);
        font-family: var(--font-sans-condensed);
    }
    .mat-mdc-form-field.mat-focused .mdc-floating-label,
    .mat-mdc-form-field.mat-focused .mat-mdc-floating-label {
        color: var(--color-accent-green-glow); // Label color on focus
    }

    // Bottom border (underline)
    .mdc-line-ripple::before, .mdc-line-ripple::after {
        border-bottom-color: var(--color-metal-interactive) !important; // Resting and focused states
    }
    .mat-mdc-form-field.mat-focused .mdc-line-ripple::after {
         border-bottom-color: var(--color-accent-green-glow) !important; // Focused underline color
    }

    // Helper/error text
    .mat-mdc-form-field-hint, .mat-mdc-form-field-error {
        color: var(--color-secondary-text);
        font-family: var(--font-sans-condensed);
    }
    .mat-mdc-form-field-error {
        color: var(--color-accent-red-error); // Error text color
    }
}

// MatSelect theming (inherits some from MatFormField)
.mat-mdc-select {
    .mdc-text-field { // The wrapper for select
        background-color: var(--color-input-bg) !important;
        border-radius: var(--input-border-radius);
    }
    .mat-mdc-select-value { // The selected value text
        color: var(--color-text-screen);
        font-family: var(--font-sans-condensed);
    }
    .mat-mdc-select-arrow svg { // The dropdown arrow
        fill: var(--color-text-screen);
    }
}
// MatSelect Panel (dropdown)
.mat-mdc-select-panel, .mat-mdc-menu-panel { // Also style general menu panel for consistency
    background-color: var(--color-background-dropdown) !important;
    border: 1px solid var(--color-border-dropdown) !important;

    .mat-mdc-option {
        color: var(--color-text-dropdown-item);
        font-family: var(--font-sans-condensed);
        &:hover, &.mdc-list-item--selected, &.mat-mdc-option-active {
            background-color: var(--color-background-dropdown-hover) !important;
            color: var(--color-text-dropdown-item-hover) !important;
        }
    }
    .mat-mdc-option.mdc-list-item--selected {
      color: var(--color-accent-green-glow) !important; // Highlight selected item
    }
}


// MatExpansionPanel theming
.mat-expansion-panel {
    background-color: var(--color-background-panel-alt); // Slightly different from main panel if needed
    border: 1px solid var(--color-border-panel);
    box-shadow: none; // Remove default Material shadow if custom is preferred
    margin-bottom: var(--padding-small) !important; // Add some space between panels

    .mat-expansion-panel-header {
        color: var(--color-text-title);
        font-family: var(--font-display);
        font-size: 1.2rem; // Slightly smaller than main titles
        background-color: var(--color-background-header); // Header distinct background
        border-bottom: 1px solid var(--color-border-panel);
        padding: 0 var(--padding-medium); // Adjust padding

        &:hover {
            background-color: var(--color-background-header-hover);
        }

        .mat-expansion-indicator::after { // Style the arrow
            color: var(--color-text-title);
        }
    }
    .mat-expansion-panel-content {
        background-color: var(--color-background-panel-content); // Content area background
        color: var(--color-primary-text);
        padding: var(--padding-medium);
        font-family: var(--font-sans-condensed);
    }
}

// MatSlideToggle theming
.mat-mdc-slide-toggle {
    .mdc-form-field label { // The label text
        color: var(--color-secondary-text);
        font-family: var(--font-sans-condensed);
    }

    .mdc-switch__track { // The track of the toggle
        background-color: var(--color-metal-dark); // Off state track
    }
    .mdc-switch__handle { // The thumb/handle
        background-color: var(--color-metal-interactive) !important; // Off state handle
        box-shadow: 0 0 3px var(--color-metal-interactive-glow);
    }

    // Selected state
    &.mat-checked {
        .mdc-switch__track {
            background-color: var(--color-accent-green-cogitator-transparent) !important; // On state track (semi-transparent)
        }
        .mdc-switch__handle {
            background-color: var(--color-accent-green-cogitator) !important; // On state handle
            box-shadow: 0 0 5px var(--color-accent-green-glow);
        }
    }
    // Focus state (can be combined with selected or not)
    &:focus .mdc-switch__handle, &.cdk-focused .mdc-switch__handle {
         box-shadow: 0 0 8px var(--color-accent-green-glow); // More prominent glow on focus
    }
}

// MatTooltip theming
.mat-mdc-tooltip {
    background-color: var(--color-tooltip-bg) !important;
    color: var(--color-tooltip-text) !important;
    font-family: var(--font-sans-condensed) !important;
    font-size: 0.9rem !important;
    border: 1px solid var(--color-tooltip-border) !important;
    padding: var(--padding-small) var(--padding-medium) !important;
    border-radius: var(--input-border-radius) !important; // Consistent border radius
}

// MatDivider
.mat-divider {
    border-top-color: var(--color-border-divider);
}

// MatProgressBar (if used)
.mat-mdc-progress-bar {
    .mdc-linear-progress__buffer-bar {
        background-color: var(--color-progressbar-buffer-bg) !important;
    }
    .mdc-linear-progress__bar-inner {
        border-color: var(--color-progressbar-main) !important; // For determinate
    }
    // For indeterminate, you might need to target specific animation elements if they exist
}

// MatSnackBar (if used)
.mat-mdc-snack-bar-container {
    background-color: var(--color-snackbar-bg) !important;
    color: var(--color-snackbar-text) !important;
    border: 1px solid var(--color-snackbar-border) !important;

    .mdc-snackbar__label {
        font-family: var(--font-sans-condensed) !important;
    }
    .mat-mdc-button.mat-mdc-snack-bar-action { // Action button in snackbar
        color: var(--color-snackbar-action-text) !important;
        &:hover {
            background-color: var(--color-snackbar-action-hover-bg) !important;
        }
    }
}

// MatDialog (if used)
.mat-mdc-dialog-container .mdc-dialog__surface {
    background-color: var(--color-dialog-bg) !important;
    color: var(--color-dialog-text) !important;
    border: 1px solid var(--color-dialog-border) !important;
    border-radius: var(--dialog-border-radius) !important;
}
.mat-mdc-dialog-title {
    color: var(--color-dialog-title-text) !important;
    font-family: var(--font-display) !important;
    border-bottom: 1px solid var(--color-dialog-border) !important;
}
.mat-mdc-dialog-content {
    font-family: var(--font-sans-condensed) !important;
}
.mat-mdc-dialog-actions {
    border-top: 1px solid var(--color-dialog-border) !important;
    padding-top: var(--padding-medium) !important; // Add some space above action buttons
}


